<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:paddingLeft="@dimen/cell_horizontal_margin"
    android:paddingRight="@dimen/cell_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bookTmb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/bookTmb"
        android:paddingLeft="@dimen/margin_between_TmbAndBooktitle"
        android:layout_weight="7">
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/bookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookTitle"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/purchaseDate"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/margin_between_PdateAndRight"
            android:layout_alignTop="@+id/bookPrice"/>

        <TextView
            android:id="@+id/text_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=">"/>
    </RelativeLayout>


</LinearLayout>
